<UserControl x:Class="CLinerStyle.Cs_Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLinerStyle"
             x:Name="ks"
             mc:Ignorable="d"
             >
    <Thumb  x:Name="thumb" HorizontalAlignment="Center" VerticalAlignment="Top" DragDelta="thumb_DragDelta">
        <Thumb.Template>
            <ControlTemplate TargetType="{x:Type Thumb}">
                <Image x:Name="image" Source="{Binding imagethumb, ElementName=ks , Mode=TwoWay, NotifyOnTargetUpdated=True}" Stretch="Uniform"/>
            </ControlTemplate>
        </Thumb.Template>
    </Thumb>
</UserControl>


