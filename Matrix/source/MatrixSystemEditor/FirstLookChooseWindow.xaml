        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FirstLookChooseWindow" Height="390" Width="558" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Resources/firstLookFace.png"/>
    </Window.Background>
    <Canvas>
        <RadioButton Content="Daisy chain network mode" Canvas.Left="12" Canvas.Top="14" IsChecked="True" Name="radioI"></RadioButton>
        <Button Content="Enter" Width="80" Height="30" Canvas.Left="452" Canvas.Top="315" Name="btnEnter" Click="Enter_click"></Button>
        <RadioButton Content="Star network mode" Canvas.Left="12" Canvas.Top="159" Name="radioII" />
        <Label Content="PC" Canvas.Left="125" Canvas.Top="90"></Label>
        <Label Content="PC" Canvas.Left="159" Canvas.Top="190"/>
        <Label Content="Router" Canvas.Left="125" Canvas.Top="299"/>
        <Label Content="MatrixA8" Canvas.Left="301" Canvas.Top="216"/>
        <Label Content="MatrixA8" Canvas.Left="301" Canvas.Top="35"/>
    </Canvas>
</Window>
