<Window x:Class="MatrixSystemEditor.MenuWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="System Menu" Height="150" Width="150" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Password Setting" FontSize="18" Click="pwdSetBtn_click"></Button>
        <Border BorderBrush="White" BorderThickness="2" Height="2" Grid.Row="1"></Border>
        <Button Grid.Row="2" Content="Lock System"  FontSize="18" Click="lockSysBtn_click" ></Button>
    </Grid>
</Window>
