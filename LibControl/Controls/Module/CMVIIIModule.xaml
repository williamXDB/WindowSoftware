        <Grid Tag="100" ShowGridLines="False" >
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Change DeviceID" Click="MenuItem_Click"></MenuItem>
                    <Separator/>
                    <MenuItem Header="delete Module" Click="MenuItem_Click_1"></MenuItem>

                </ContextMenu>
            </Grid.ContextMenu>
            <Grid.RowDefinitions>
                <!--16 rows total-->
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition  ></RowDefinition>
                <!--line 10-->
                <RowDefinition Height="20"></RowDefinition>
                <!--line 11-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition MinWidth="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock  Grid.ColumnSpan="4"  MaxHeight="15" MinHeight="15" Name="headLb"
                   TextAlignment="Center" FontSize="10" Text="MatrixA8" Foreground="Black"                
                   ></TextBlock>
